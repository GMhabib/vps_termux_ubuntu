<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body { background-color: #f8f9fa; }
        .table-responsive { max-height: 70vh; }
        .action-buttons form { display: inline-block; margin: 0 2px; }
        .btn-sm { padding: 0.2rem 0.5rem; font-size: 0.8rem; }
        .path-display {
            background-color: #e9ecef;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            margin-bottom: 1rem;
            word-break: break-all;
        }
        #terminal {
            background-color: #212529;
            color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            font-family: 'Courier New', Courier, monospace;
            height: 400px;
            overflow-y: scroll;
            white-space: pre-wrap;
            word-wrap: break-word;
        }
        #terminal-input-container {
            display: flex;
            background-color: #212529;
            padding: 5px 15px 10px;
            border-radius: 5px;
        }
        #terminal-input {
            flex-grow: 1;
            background-color: transparent;
            border: none;
            color: #f8f9fa;
            outline: none;
        }
        #terminal-prompt {
            color: #28a745;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">My Files</a>
            <div class="d-flex text-white">
                <span class="navbar-text me-3">
                    Selamat Datang, <strong><%= user.username %></strong>
                </span>
                <a href="/logout" class="btn btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-folder-open"></i> File Manager</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h5>Upload File Baru</h5>
                            <form action="/upload" method="POST" enctype="multipart/form-data" class="d-flex">
                                <input type="hidden" name="currentPath" value="<%= currentPath %>">
                                <input class="form-control me-2" type="file" name="filedata" required>
                                <button class="btn btn-primary" type="submit">Upload</button>
                            </form>
                        </div>
                        
                        <hr>

                        <h5>File & Folder Anda</h5>
                        <div class="path-display">
                            <i class="fas fa-location-dot"></i> Lokasi: <strong>/<%= currentPath.replace(/\\/g, '/') %></strong>
                        </div>
                  <i class="fas fa-terminal"></i> <strong>Cara Jalankan Start</strong><br>          <i>bash nama_file.sh</i> <br>     <i>node nama_file.js</i>          
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Nama</th>
                                        <th>Ukuran</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% files.forEach(file => { %>
                                        <tr class="text-nowrap">
                                            <td>
                                                <% if (file.isDirectory) { %>
                                                    <i class="fas fa-folder text-warning"></i>
                                                    <a href="/dashboard?path=<%= encodeURIComponent(file.path) %>" class="text-decoration-none"><%= file.name %></a>
                                                <% } else { %>
                                                    <i class="fas fa-file text-secondary"></i> <%= file.name %>
                                                <% } %>
                                            </td>
                                            <td><%= file.size %></td>
                                            <td class="action-buttons">
                                                <% if (!file.isDirectory) { %>
                                                    <a href="/download/<%= encodeURIComponent(file.path) %>" class="btn btn-success btn-sm" title="Download"><i class="fas fa-download"></i> Download</a>
                                                    
                                                    <!-- <button type="button" class="btn btn-info btn-sm edit-btn" data-path="<%= //file.path %>" title="Edit"><i class="fas fa-edit"></i> Edit</button> -->
                                                    <% if (/\.(zip|tar|tar\.gz|tgz)$/i.test(file.name)) { %>
                                                        <form action="/extract/<%= encodeURIComponent(file.path) %>" method="POST" onsubmit="return confirm('Yakin ingin mengekstrak <%= file.name %>?');">
                                                            <button type="submit" class="btn btn-warning btn-sm" title="Ekstrak"><i class="fas fa-box-open"></i> Ekstrak</button>
                                                        </form>
                                                    <% } %>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="row mt-4 justify-content-center">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-terminal"></i> Web Shell (Hanya Bekerja di Direktori Upload)</h3>
                    </div>
                    <div class="card-body p-0">
                        <div id="terminal">
                            <span>Selamat datang di Web Shell. Perintah berbahaya diblokir secara client-side.</span><br>
                            <span>Lokasi kerja: **/<%= currentPath.replace(/\\/g, '/') %>**</span>
                        </div>
                        <form id="terminal-form">
                            <div id="terminal-input-container">
                                <span id="terminal-prompt">$></span>
                                <input type="text" id="terminal-input" autocomplete="off" autofocus>
                                <input type="hidden" id="shell-current-path" value="<%= currentPath %>">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>        
    </div>
    
    <div class="modal fade" id="editFileModal" tabindex="-1" aria-labelledby="editFileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form id="edit-form" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editFileModalLabel">Edit File: <span id="filename-span"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="currentPath" value="<%= currentPath %>"> 
                        <textarea name="fileContent" id="fileContent" class="form-control" rows="20"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const editModal = new bootstrap.Modal(document.getElementById('editFileModal'));
            
            // ===================================
            // 1. LOGIKA TOMBOL EDIT
            // ===================================
            document.querySelectorAll('.edit-btn').forEach(button => {
                button.addEventListener('click', async (e) => {
                    const filePath = e.currentTarget.dataset.path;
                    document.getElementById('filename-span').textContent = filePath.split(/[\\/]/).pop();
                    
                    const editForm = document.getElementById('edit-form');
                    editForm.action = `/user/edit/${encodeURIComponent(filePath)}`; 
                    
                    try {
                        const response = await fetch(`/user/get-content/${encodeURIComponent(filePath)}`);
                        
                        if (!response.ok) {
                            const errorText = await response.text();
                            let errorMessage = `Gagal memuat file: Status ${response.status}`;
                            
                            try {
                                const errorJson = JSON.parse(errorText);
                                errorMessage = errorJson.message || errorMessage;
                            } catch {
                                errorMessage += `: ${errorText.substring(0, 50)}...`;
                            }
                            throw new Error(errorMessage);
                        }
                        
                        const content = await response.text();
                        document.getElementById('fileContent').value = content;
                        editModal.show();
                    } catch (error) {
                        alert(`Error saat memuat konten: ${error.message}`);
                    }
                });
            });
            
// ===================================
// 2. LOGIKA WEB SHELL TERMINAL YANG DIPERBAIKI
// ===================================
// Catatan: Pastikan kode ini berada di dalam document.addEventListener('DOMContentLoaded', ...)

const terminalOutput = document.getElementById('terminal');
const terminalForm = document.getElementById('terminal-form');
const terminalInput = document.getElementById('terminal-input');
const shellCurrentPathInput = document.getElementById('shell-current-path');

// FUNGSI KEAMANAN: Memblokir perintah berbahaya
function isCommandDangerous(command) {
    const lowerCommand = command.toLowerCase().trim();
    
    // 1. Blokir perintah hapus atau modifikasi sistem
    if (/\b(rm\s+-r|rm\s+-f|rm\s+-fr|rm\s+.*\/|rm|cp|cp\s+-r|pkill|kill\s+-9|shutdown|reboot|format|dd)\b/i.test(lowerCommand)) {
        return 'Perintah penghapusan/modifikasi sistem yang berbahaya diblokir.';
    }

    // 2. Blokir akses ke direktori root atau sistem umum
    if (/\b(pwd|cat|tail|grep|find)\s+(\/|~\/|\/etc\/|\/var\/|\/sdcard\/)/i.test(lowerCommand)) {
        return 'Akses atau perintah ke direktori root atau sistem (/sdcard, /etc, /) diblokir untuk keamanan.';
    }
    
    // 3. Blokir modifikasi user/grup
    if (/\b(usermod|useradd|passwd|groupadd)\b/i.test(lowerCommand)) {
        return 'Perintah modifikasi user diblokir.';
    }

    return false;
}

if (terminalForm) {
    terminalForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const command = terminalInput.value.trim();
        if (command === '') return;

        const commandEcho = document.createElement('div');
        commandEcho.innerHTML = `<span style="color: #28a745;">$></span> ${command}`;
        terminalOutput.appendChild(commandEcho);
        
        terminalInput.value = '';

        const securityError = isCommandDangerous(command);
        if (securityError) {
            const errorElement = document.createElement('pre');
            errorElement.style.color = '#ffc107'; // Warna kuning/warning
            errorElement.textContent = `[BLOCKED]: ${securityError}`;
            terminalOutput.appendChild(errorElement);
            terminalOutput.scrollTop = terminalOutput.scrollHeight;
            return;
        }

        try {
            // Menggunakan route /admin/execute-command (DILINDUNGI di server!)
            const response = await fetch('/admin/execute-command', { 
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    command: command,
                    currentPath: shellCurrentPathInput.value
                })
            });

            if (!response.ok) {
                let data = {};
                let errorText = await response.text(); // Ambil respons sebagai Teks dulu

                // 1. Coba parse sebagai JSON (untuk respons error yang benar dari server)
                try {
                    data = JSON.parse(errorText);
                } catch (e) {
                    // 2. Jika parse GAGAL, respons adalah Plain Text (misalnya: "Akses ditolak...")
                    data.message = errorText.trim(); 
                }
                
                const errorElement = document.createElement('pre');
                errorElement.style.color = '#dc3545';
                // Tampilkan pesan error yang tangguh
                errorElement.textContent = `Error ${response.status}: ${data.output || data.message || 'Unknown Server Error'}`;
                terminalOutput.appendChild(errorElement);

            } else {
                // LOGIKA SUKSES
                const data = await response.json();
                
                const outputElement = document.createElement('pre');
                outputElement.style.margin = '0';
                outputElement.textContent = data.output;
                terminalOutput.appendChild(outputElement);
            }

        } catch (error) {
            // Menangani error jaringan atau kegagalan fetch
            const errorElement = document.createElement('pre');
            errorElement.style.color = '#dc3545';
            errorElement.textContent = `Client/Network Error: ${error.message}`;
            terminalOutput.appendChild(errorElement);
        }
        
        terminalOutput.scrollTop = terminalOutput.scrollHeight;
    });
}

            
            // Catatan: Tidak ada lagi penutup } atau }); yang berlebihan di sini!
        });
    </script>
</body>
</html>
